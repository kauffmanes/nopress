{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "experimentalDecorators": true
    },
    "include": [
        "src/api/",
        "src/config/",
        "src/models",
        "src/public/dist",
        "src/*"
    ],
    "exclude": [
    	"node_modules"
    ]
}